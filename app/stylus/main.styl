@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #777
$black = #222

$green = #3f4f4b
$darkgreen = #292f2e
$darkergreen = #000e08
$lightgreen = #00a637

html
button
input
select
textarea

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

  
body
  background: black
  font-size: 1em
  line-height: 1.4

.container
  width: 640px
  margin: 0 auto
  text-align: center
  position: absolute
  left: 50%
  top: 50%
  margin-right: -50%
  transform: translate(-50%, -50%)
  
  header
    height: 90px
    background: linear-gradient(to bottom, $green , $darkergreen) /* Standard syntax */
    
    h1
      color: white
      font-size: 35px
      padding: 20px 0
      margin: 0
  
  .content
    position: relative
    background: $darkgreen
    padding: 30px
    background: radial-gradient(center, ellipse cover, $lightgreen 0%, $darkgreen 100%)
    
    .saleBadge
      position: absolute
      right: 10px
      top: 10px

    .crown 
      width: 100px
      height: 100px
      margin: 0 auto
      margin-top: 40px
      
      img 
        width: 100%
        height: auto

    .introText
      width: 500px
      margin: 0 auto
      margin-top: 20px
      color: white

      .titleText
        font-size: 40px
        margin: 0
        line-height: 1.2
        padding-bottom: 20px
        text-transform: uppercase

      .info
        border-top: 2px solid white
        border-bottom: 2px solid white
        padding: 20px 0
        .subTitleText
          font-size: 25px
          margin: 0
          text-transform: uppercase
        p
          font-size: 22px
          margin: 0
          
    .countdownContainer
      margin: 40px 0
      color: white

      .titleRow
        width: 500px
        margin: 0 auto

        .title
          width: 125px
          float: left
          text-align: center
          text-transform: uppercase
      
      .countdown
        width: 500px
        margin: 0 auto

        .numberGroup
          position: relative
          float: left
          width: 125px
          margin-top: 10px
          
          .numberLabelContainer
            width: 90px
            margin: 0 auto

            .numberLabel
              float: left
              width: 45px
              height: 80px
              background: url("../images/label.png")
              background-repeat: no-repeat
              background-size: cover
            
          .number
            position: absolute
            left: 50%
            margin-right: -50%
            transform: translate(-50%, -3px)
            font-size: 40px
            letter-spacing: 20px
            margin-left: 10px
            
           &.undefined
             margin-left: 0
