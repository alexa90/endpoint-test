@import 'normalize'
@import 'helper'
@import 'mediaqueries'

/* variables */
$gray = #647179
$darkgray = #53595d
$darkergray = #212325
$lightgrey = #cecece

body
  background: black
  font-size: 1em
  line-height: 1.4

.container
  width: 100%
  height: 100%
  margin: 0 auto
  text-align: center
  position: absolute
  background: $darkgray
  background: radial-gradient(center, ellipse cover, $lightgrey 0%, $darkgray 100%)
  
  @media $mq-medium
    width: 600px
    height: 550px
    left: 50%
    top: 50%
    margin-right: -50%
    transform: translate(-50%, -50%)
  
header
  background: linear-gradient(to bottom, $gray , $darkergray) /* Standard syntax */
  
  h1
    color: white
    font-size: 20px;
    margin: 0

    @media $mq-medium
      font-size: 35px

.content
  width: 100%
  position: relative
  padding: 20px
  
  @media $mq-medium
    padding: 30px
    
.saleBadge
  position: absolute
  right: 5px
  top: 5px
  width: 110px
  height: 110px
  
  @media $mq-medium
    right: 10px
    top: 10px

  img
    width: 100%
    height: auto

.introText
  margin: 0 auto
  margin-top: 20px
  color: white

.titleText
  font-size: 24px
  margin: 0
  line-height: 1.2
  padding-bottom: 20px
  text-transform: uppercase
  
  @media $mq-large
    font-size: 40px

.info
  border-top: 1px solid white
  border-bottom: 1px solid white
  padding: 15px 0

.subTitleText
  font-size: 18px  
  margin: 0
  text-transform: uppercase
  padding-bottom: 10px
  
  @media $mq-medium
    font-size: 25px

.subTitleText p
  font-size: 14px
  margin: 0
  
  @media $mq-medium  
    font-size: 22px   
          
.countdownContainer
  margin-top: 30px
  color: white
  
  @media $mq-medium
    margin-top: 40px

.titleRow
  margin: 0 auto
  width: 100%
  @media $mq-mobile
    width: 350px

  @media $mq-medium
    width: 100%

.title
  width: 25%
  float: left
  text-align: center
  text-transform: uppercase
  font-size: 15px
      
.countdown
  margin: 0 auto
  width: 100%

  @media $mq-mobile
    width: 350px
  
  @media $mq-medium
    width: 100%

.numberGroup
  position: relative
  float: left
  width: 25%
  margin-top: 10px
  
  @media $mq-large
    width: 135px
  
.numberLabelContainer
  width: 62px
  margin: 0 auto
  
  @media $mq-medium
    width: 90px

.numberLabel
  float: left
  width: 30px
  height: 50px
  margin-right: 2px
  background: url("../images/label.png")
  background-repeat: no-repeat
  background-size: cover
  
  @media $mq-medium
    height: 80px
    width: 45px
    margin-right: 0

.numberLabel:last-child
  margin-right: 0

.number
  position: absolute
  left: 50%
  margin-right: -50%
  transform: translate(-50%, -3px)
  font-size: 28px
  letter-spacing: 15px
  margin-left: 8px
  
  @media $mq-medium
    margin-left: 10px
    letter-spacing: 20px
    font-size: 40px
  
 &.undefined
   margin-left: 0
